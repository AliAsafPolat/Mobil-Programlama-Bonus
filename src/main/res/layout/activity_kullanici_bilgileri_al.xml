<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KullaniciBilgileriAl"
  >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/layoutKullaniciAdi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Kullanıcı Adı :"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/TextViewInputUsername"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:textSize="25sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/layoutWidth"
        app:layout_constraintTop_toBottomOf="@id/layoutKullaniciAdi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/textViewWight"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Kilo :"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editTextWeight"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:textSize="25sp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/layoutWidth"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/layoutHeight"
        >

        <TextView
            android:id="@+id/textViewHeight"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Boy  :"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editTextHeight"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:textSize="25sp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/layoutAge"
        app:layout_constraintTop_toBottomOf="@id/layoutHeight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <TextView
            android:id="@+id/textViewAge"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Yaş :"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/editTextAge"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:textSize="25sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/layoutAge"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/layoutGender">


        <TextView
            android:id="@+id/textViewGender"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Cinsiyet :"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/editTextGender"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:textSize="25sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/layoutGender"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/layoutLanguage">

        <TextView
            android:id="@+id/textViewLanguage"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Dil :"
            android:textSize="25sp" />

        <Spinner
            android:layout_marginStart="25dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/spinnerLanguage"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layoutLanguage"
        android:id="@+id/layoutMode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="15dp"
        >

        <TextView
            android:id="@+id/textViewMode"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Mod :"
            android:textSize="25sp" />

        <RadioGroup
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/radioGroupMode">
            <RadioButton
                android:id="@+id/radioButtonDark"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Dark"
                android:textSize="15sp"
                />

            <RadioButton
                android:id="@+id/radioButtonLight"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Light"
                android:textSize="15dp"/>


        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/layoutMode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/layoutButonbilgileri">

        <Button
            android:id="@+id/buttonBilgiGir"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Güncelle"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/buttonBilgiGetir"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Getir"
            android:layout_marginStart="20dp"
            android:textSize="20sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>